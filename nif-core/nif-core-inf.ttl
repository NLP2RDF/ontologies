@prefix nif: <http://persistence.uni-leipzig.org/nlp2rdf/ontologies/nif-core#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix marl: <http://purl.org/marl/ns#> .
@prefix fise: <http://fise.iks-project.eu/ontology/> .
@prefix itsrdf: <http://www.w3.org/2005/11/its/rdf#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix oa: <http://www.w3.org/ns/oa#> .

###################
# Imports
###################  

#<http://persistence.uni-leipzig.org/nlp2rdf/ontologies/nif-core#inf>  a owl:Ontology .
<http://persistence.uni-leipzig.org/nlp2rdf/ontologies/nif-core#inf>  owl:imports <http://persistence.uni-leipzig.org/nlp2rdf/ontologies/nif-core/nif-core.ttl> .
<http://persistence.uni-leipzig.org/nlp2rdf/ontologies/nif-core#inf>  owl:sameAs <http://persistence.uni-leipzig.org/nlp2rdf/ontologies/nif-core#> .

###################
# Equivalents
###################  

nif:String 
	owl:subClassOf [
		a owl:Restriction ;
		owl:onProperty nif:referenceContext ;
		owl:someValuesFrom nif:Context 
	] . 

nif:Context
	owl:subClassOf [
		a owl:Restriction ;
		owl:onProperty nif:referenceContext ;
		owl:hasSelf "true"^^xsd:boolean 
	] . 

###################
# hasKey Definitions 
###################    

# <http://persistence.uni-leipzig.org/nlp2rdf/ontologies/nif-core#referenceContext> a owl:FunctionalProperty .
# nif:HTMLString

# these axioms are experimental for now
nif:Context owl:hasKey ( nif:isString ) .
nif:String owl:hasKey (nif:referenceContext nif:beginIndex nif:endIndex) .

###################
# Transitivity
###################
	
nif:subStringTrans	
	a owl:TransitiveProperty .
nif:superStringTrans
    a owl:TransitiveProperty .


nif:previousSentenceTrans
    a owl:TransitiveProperty .
nif:nextSentenceTrans
    a owl:TransitiveProperty .
    

nif:nextWordTrans
    a owl:TransitiveProperty .
nif:previousWordTrans
    a owl:TransitiveProperty.

###################
# Inverse Of
###################


nif:subString
    owl:inverseOf nif:superString .

nif:nextSentence
    owl:inverseOf nif:previousSentence .

nif:nextWord 
   owl:inverseOf nif:previousWord .
   
nif:sentence 
   owl:inverseOf nif:word .

# experimental
nif:opinion 
	owl:inverseOf marl:extractedFrom . 

###################
# Mapping to FISE 
###################

nif:Context 
	rdfs:subClassOf <http://stanbol.apache.org/ontology/enhancer/enhancer#ContentItem> .

nif:Annotation
    rdfs:subClassOf fise:Enhancement .  

nif:String
	rdfs:subClassOf fise:TextAnnotation .   
nif:EntityAnnotation
	rdfs:subClassOf fise:EntityAnnotation .   
nif:TopicAnnotation	
	rdfs:subClassOf fise:TopicAnnotation .   

nif:anchorOf
	rdfs:subPropertyOf fise:selected-text .
nif:before
	rdfs:subPropertyOf fise:selection-prefix .
nif:after 
	rdfs:subPropertyOf fise:selection-suffix .

nif:head
	rdfs:subPropertyOf fise:selection-head .
nif:tail 
	rdfs:subPropertyOf fise:selection-tail .
nif:contextAsLiteral
	rdfs:subPropertyOf fise:selection-context .

itsrdf:taIdentRef  
	rdfs:subPropertyOf fise:entity-reference .

itsrdf:taClassRef  
	rdfs:subPropertyOf fise:entity-type .
	
# ??? not sure about fise:entity-label
# This should be dbpedia:London rdfs:label "London"@en ;
#
# fise:entity-label
#    a owl:DatatypeProperty ;
#    rdfs:comment "the label(s) of the referenced Entity"@en ;
